  <%= @team.name %>
</div>


<h2>Last updated team projects</h2>
<div class="small-card p-3" style="border-radius: 10px">
  <ul style="list-style-type: none">
    <% @last_projects.each do |last_project| %>
      <li> <%= last_project.project.name %> </li>
      <% if last_project.status == "pending" %>
        <p style="background-color:red"><%= last_project.status %></p>
      <% end %>
      <% last_project.project_members.each do |member| %>
        <p> <%= member.user.first_name %> </p>
      <% end %>
    <% end %>
  </ul>
</div>
<h2>Last proposals</h2>
<div class="big-card">
  <ul style="list-style:none">
    <% @last_proposals.each do |last_proposal| %>
      <li>
        <div class="d-flex flex-column">
          <%= last_proposal.title %>
          <%= last_proposal.teams_project.project.name %> -
          <%= last_proposal.client.company_name %>
        </div>
        <%= last_proposal.status %> - <%= last_proposal.total_price %> â‚¬
      </li>
    <% end %>
  </ul>
</div>

