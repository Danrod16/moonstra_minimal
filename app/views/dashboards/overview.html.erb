
<div class="small-card">
  <%= @team.name %>
</div>


<h2>Last updated team projects</h2>
<div class="small-card p-3" style="border-radius: 10px">
  <ul style="list-style-type: none">
    <% @last_projects.each do |last_project| %>
      <li> <%= last_project.project.name %> </li>
      <p><%= last_project.status %></p>
      <% last_project.project_members.each do |member| %>
        <p> <%= member.user.first_name %> </p>
      <% end %>
    <% end %>
  </ul>
</div>
<h2>Last proposals</h2>
<div class="big-card">
  <ul style="list-style:none">
    <% @teams_projects.each do |teams_project| %>
        <% teams_project.proposals.last(5).each do |proposal| %>
          <li>
            <div class="d-flex flex-column">
              <%= proposal.title %>
              <%= proposal.teams_project.project.name %> -
              <%= proposal.client.company_name %>
            </div>
            <%= proposal.status %> - <%= proposal.total_price %> â‚¬
          </li>
        <% end %>
    <% end %>
  </ul>
</div>

<h2>Team's categories</h2>
<div class="cards">
  <% @teams_projects.each do |teams_project| %>
    <%= teams_project.project.categories%>
  <% end %>
</div>


