<%= simple_form_for @team do |f| %>
  <div class="form-inputs">
    <%= f.input :name, class: "form-field" %>
    <%= f.input :description, class: "form-field" %>
    <%= f.input :terms_and_conditions, class: "form-field" %>
    <%= f.input :primary_color, input_html: { class: "form-field", type: "color"} %>
    <div class="hidden" id="transition-from">
      <%= f.input :members, class: "bg-black" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
  </div>
<% end %>
