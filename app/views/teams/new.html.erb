
<div class="my-container">
  <div class="big-card">
    <div data-controller="wizard">
      <%= simple_form_for @team do |f|  %>
        <div data-wizard-target="step">
          <%= f.input :name, class: "form-field" %>
          <%= f.input :description, class: "form-field" %>

          <%= button_tag "Next", type: "button", class: "btn-primary",
            data: {
              action: "click->wizard#goToNext",
              next_step: "1"
            } %>
        </div>

        <div data-wizard-target="step", class="hidden" id="transition-from">
          <%= f.input :members, class: "bg-black" %>

          <%= button_tag "Previous", type: "button", class: "btn-primary",
            data: {
              action: "click->wizard#goToPrevious",
              previous_step: "1"
            } %>
          <%= f.button :submit, class: "btn-primary" %>

        </div>

      <% end %>
    </div>
  </div>
</div>
