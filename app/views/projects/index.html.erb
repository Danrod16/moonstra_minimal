<div class="my-container">
  <div class="teams-header">
    <div class="cards">
      <% @public_projects.each do |project| %>
        <div class="small-card">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="small-card-infos">
            <div>
              <h2><%= project.name %></h2>
              <p><%= project.description %></p>
              <p>Owner: <%= project.user.first_name %></p>
              <p> Finders fee: <%= project.finders_fee %></p>
              <p>Category:</p>
              <% project.categories. each do |category| %>
                <p><%= category.name %></p>
              <% end %>
            </div>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="small-card-user avatar-bordered" />
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
